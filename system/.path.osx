

# Prepend new items to path (if directory exists)

prepend() {
          [ -d $1 ] && PATH="$1:${PATH}"
}
JAVA_HOME=$(/usr/libexec/java_home -v 1.7)
prepend $JAVA_HOME/bin
SPARK_HOME=/usr/local/Cellar/apache-spark/1.4.0
prepend $SPARK_HOME/bin

#Finally, add this Haskell stuff to PATH even though it doesn't currently exist
PATH=$HOME/.cabal/bin:$HOME/Library/Haskell/bin:$PATH