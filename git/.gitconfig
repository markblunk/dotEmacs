[user]
    name = Mark Blunk
    email = mblunk@gmail.com
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
[github]
    user = markblunk
[grep]
    lineNumber = true
[help]
    autocorrect = 1
[credential]
    helper = cache --timeout=3600
[core]
    editor = emacs
    excludesfile = ~/.gitignore_global
	autocrlf = input
[push]
    default = current
[gpg]
    program = gpg2
[status]
    showUntrackedFiles = no